style(type='text/css').
  @font-face {
      font-family: 'Century Gothic';
      src: url('./CenturyGothic.woff2') format('woff2'),
        url('./CenturyGothic.woff') format('woff');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

  :root {
    --default-font-family: 'Century Gothic', sans-serif;
    --serif-font-family: 'Italiana', serif;
    --duration: 0.4s;
    --easing: cubic-bezier(0.3, 1, 0.7, 1);
    --defaults: var(--duration) var(--easing);
    --main-blend: soft-light;
    --sec-blend: exclusion;

    --xgg: calc(0.5rem + 15vw);
    --gg: calc(0.5rem + 16.18vw);
    --g: calc(0.5rem + 6.18vh);
    --m: calc(0.5rem + 3.81924vh);
    --p: calc(0.5rem + 1.45865941776vh);
    --xp: calc(1.2rem);
  }

  .--dark {
    --main-color: #0f1c13;
    --sec-color: #fcfaf9;
  }
  .--light {
    --main-color: #fcfaf9;
    --sec-color: #0f1c13;
  }
  .theme {
    background-color: var(--main-color);
    color: var(--sec-color);
    transition: background-color var(--defaults), color var(--defaults);
  }
  .theme::selection {
    background-color: var(--sec-color);
    color: var(--main-color);
  }
  .scrollbar-thumb {
    background-color: var(--sec-color);
  }
  .theme--border {
    border-color: var(--sec-color);
    transition: border-color var(--defaults);
  }
  .theme--background {
    background-color: var(--sec-color);
    transition: background-color var(--defaults);
  }
  .theme--color {
    color: var(--sec-color);
    transition: color var(--defaults);
  }
  .theme--fill path {
    fill: var(--sec-color);
    transition: fill var(--defaults);
  }
  .theme--cursor,
  .theme--cursor .cursor__mask {
    mix-blend-mode: var(--main-blend)
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    text-rendering: optimizeLegibility;
    -webkit-tap-highlight-color: transparent;
    user-select: none;
  }

  html {
    font-size: 10px;
    font-family: var(--default-font-family);
    font-weight: 400;
    font-style: normal;
    line-height: 1.3;
    letter-spacing: 0.1rem;
    overflow-x: hidden;
  }

  body {
    width: 100%;
    min-height: 100vh;
    overflow: hidden;
    position: relative;
  }

  /* Grainy texture animation by Geoff Graham https://css-tricks.com/snippets/css/animated-grainy-texture/ */
  body:before {
    will-change: background-image;
    animation: grain 10s steps(10) infinite;
    background-image: url('./noise.png');
    content: '';
    height: 300%;
    left: -50%;
    opacity: 0.4;
    position: fixed;
    top: -100%;
    width: 300%;
    z-index: -1;
  }

  @keyframes grain {
    0%,
    100% {
      transform: translate(0, 0);
    }

    10% {
      transform: translate(-5%, -9%);
    }

    20% {
      transform: translate(-13%, 5%);
    }

    30% {
      transform: translate(7%, -20%);
    }

    40% {
      transform: translate(-5%, 20%);
    }

    50% {
      transform: translate(-13%, 9%);
    }

    60% {
      transform: translate(13%, 0%);
    }

    70% {
      transform: translate(0%, 13%);
    }

    80% {
      transform: translate(3%, 25%);
    }

    90% {
      transform: translate(-9%, 9%);
    }
  }

  .scroller {
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
  }

  .container {
    position: relative;
    width: 94vw;
    height: 100%;
    margin: 0 auto;
  }

  .section {
    display: flex;
    flex-flow: column;
    justify-content: center;
  }

  .--loading .section {
    visibility: hidden;
  }

  .--fade {
    opacity: 0;
  }
