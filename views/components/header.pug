header(class="header")

	div(class="header__titles")
		h2(class="header__title theme--color") EduBon.
		ul(class="header__subtitles")
			li
				h2(class="header__subtitle theme--color") about
			li
				h2(class="header__subtitle theme--color") selected 
					span work
			li
				h2(class="header__subtitle theme--color --last") available for work

	div(class="header__menu")
		ul(class="header__menu__list")
			li
				a(class="header__menu__item --contact theme--color") contact
			li(class="header__menu__item --theme theme--background")

		div(class="header__wrapper--dots")
			div(class="dots --loading")
				div(class="dot theme--border")
				div(class="dot theme--border")
				div(class="dot theme--border")

	div(class="header__line theme--background")